{% extends "base.html.twig" %}

{% block title %}S'incrire{% endblock %}
{% block description %}inscrit toi{% endblock %}
{% block bodyClass %}incription{% endblock %}

{% block stylesheets %}
<style>
    .main-footer{
        position: fixed;
        bottom: 0;
    }
</style>
{% endblock %}

{% block body %}
<!-- MAIN CONTENT -->
<main role="main">
    <!-- SECTION 1 -->
    <section class="container">
        <div class="content content-inscription">
            <h1 class="big-title center">Créer un article</h1>
            <form class="form-inscription" name="article" method="post" enctype="multipart/form-data">
                <div id="article">
                    <div class="field-container">
                        <label for="article_title" class="required">Titre de l'article</label>
                        <input type="text" id="article_title" name="article[title]" required="required">
                    </div>
                    <div class="field-container">
                        <label for="article_summary" class="required">Résumé de l'article</label>
                        <input type="text" id="article_summary" name="article[summary]" required="required">
                    </div>
                    <div class="field-container">
                        <label for="article_content" class="required">Contenu de l'article</label>
                        <textarea id="article_content" name="article[content]" required="required"></textarea>
                    </div>
                    <div class="field-container">
                        <label for="article_media" class="required">Image ou vidéo de l'article</label>
                        <input type="file" id="article_media" name="article[media]" required="required">
                    </div>
                    <div class="form-button">
                        <input class="btn" type="submit" id="article_save" name="article[save]">
                    </div>
                </div>
            </form>
        </div>
    </section>
</main>
