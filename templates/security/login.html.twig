{% extends "base.html.twig" %}

{% block title %}Connexion{% endblock %}
{% block description %}connectez-vous{% endblock %}
{% block bodyClass %}connexion{% endblock %}

{% block body %}
{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
  <main role="main">
    <!-- SECTION 1 -->
    <section class="container">
      <div class="content content-connexion">
          <h1 class="big-title center">Connexion</h1>
            <form action="{{ path('login') }}" method="post" class="form-connexion">
                {#
                    If you want to control the URL the user
                    is redirected to on success (more details below)
                    <input type="hidden" name="_target_path" value="/account" />
                #}
                <div class="field-container">
                    <label for="username">Username:</label>
                    <input type="text" id="username" name="_username" value="{{ last_username }}" />
                </div>
                <div class="field-container">
                    <label for="password">Password:</label>
                    <input type="password" id="password" name="_password" />
                </div>
                <div class="field-container form_checkbox">
                  <input type="checkbox" name="remember" id="remember">
                  <label for="remember">Remember</label>
                </div>
                <div class="form-button">
                  <input class="btn" type="submit"></input>
                  <p>Pas de compte ? <a href={{ path('register') }}>S'enregistrer</a></p>
                </div>
            </form>
        </div>
    </section>
    </main>

{% endblock %}
